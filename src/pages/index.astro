---
import { getRelativeLocaleUrl } from 'astro:i18n';
import Layout from '../layouts/Layout.astro';

const currentLocale = Astro.currentLocale || 'id';

const content = {
	title: 'Selamat Datang di Emverst',
	subtitle: 'Catatan perjalanan saya menuju hidup yang lebih sehat melalui pola makan, gerakan, dan istirahat yang penuh kesadaran.',
	description: 'Di sini saya berbagi resep yang saya coba, rutinitas olahraga yang saya lakukan, dan cara saya beristirahat.',
	sections: [
		{
			title: 'Makan',
			description: 'Resep-resep yang sudah saya coba & sukai',
			icon: 'ğŸ½ï¸',
			href: getRelativeLocaleUrl('id', 'eat'),
			color: 'bg-green-500 hover:bg-green-600'
		},
		{
			title: 'Bergerak',
			description: 'Rutinitas olahraga yang saya lakukan',
			icon: 'ğŸƒâ€â™€ï¸',
			href: getRelativeLocaleUrl('id', 'move'),
			color: 'bg-blue-500 hover:bg-blue-600'
		},
		{
			title: 'Istirahat',
			description: 'Cara saya merawat diri & pulih',
			icon: 'ğŸ§˜â€â™€ï¸',
			href: getRelativeLocaleUrl('id', 'rest'),
			color: 'bg-purple-500 hover:bg-purple-600'
		},
		{
			title: 'Tentang',
			description: 'Kenali lebih jauh tentang perjalanan saya',
			icon: 'ğŸ’¡',
			href: getRelativeLocaleUrl('id', 'about'),
			color: 'bg-orange-500 hover:bg-orange-600'
		}
	],
	getStarted: 'Mulai Jelajahi',
	explore: 'Lihat',
	startJourney: 'Mari Mulai Perjalanan Sehat Bersama',
	journeyDescription: 'Saya berbagi kebiasaan dan pengalaman saya dengan harapan bisa menginspirasi Anda untuk memulai perjalanan wellness Anda sendiri. Setiap langkah kecil itu berarti.'
};
---

<Layout title={content.title} lang={currentLocale}>
	<div class="min-h-screen">
		<!-- Hero Section -->
		<section class="bg-gradient-to-br from-emerald-50 to-teal-100 py-20">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
				<h1 class="text-4xl md:text-6xl font-bold text-gray-900 mb-6">
					{content.title}
				</h1>
				<p class="text-xl md:text-2xl text-gray-600 mb-8 max-w-3xl mx-auto">
					{content.subtitle}
				</p>
				<p class="text-lg text-gray-500 max-w-2xl mx-auto">
					{content.description}
				</p>
			</div>
		</section>

		<!-- Navigation Cards -->
		<section class="py-20 bg-white">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
					{content.sections.map((section) => (
						<a 
							href={section.href}
							class="group block"
						>
							<div class={`${section.color} rounded-2xl p-8 text-white transform transition-all duration-300 group-hover:scale-105 group-hover:shadow-xl`}>
								<div class="text-4xl mb-4">
									{section.icon}
								</div>
								<h3 class="text-2xl font-bold mb-2">
									{section.title}
								</h3>
								<p class="text-white/90">
									{section.description}
								</p>
								<div class="mt-4 flex items-center text-white/80">
									<span class="text-sm font-medium">
										{content.explore}
									</span>
									<svg class="w-4 h-4 ml-2 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
									</svg>
								</div>
							</div>
						</a>
					))}
				</div>
			</div>
		</section>

		<!-- Featured Section -->
		<section class="py-20 bg-gray-50">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
				<h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-8">
					{content.startJourney}
				</h2>
				<p class="text-lg text-gray-600 max-w-2xl mx-auto mb-8">
					{content.journeyDescription}
				</p>
				<a 
					href={getRelativeLocaleUrl('id', 'eat')}
					class="inline-block bg-emerald-600 text-white px-8 py-3 rounded-lg text-lg font-medium hover:bg-emerald-700 transition-colors duration-200"
				>
					{content.getStarted}
				</a>
			</div>
		</section>
	</div>
</Layout>