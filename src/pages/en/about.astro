---
import { getRelativeLocaleUrl } from 'astro:i18n';
import Layout from '../../layouts/Layout.astro';

const currentLocale = Astro.currentLocale || 'en';

const content = {
	en: {
		title: 'About Emverst',
		subtitle: 'Your Partner in Healthy Living',
		mission: 'Our Mission',
		missionText: 'At Emverst, we believe that true wellness comes from balancing three essential pillars of health: mindful eating, regular movement, and quality rest. Our mission is to guide you on a transformative journey towards a healthier, more balanced lifestyle.',
		vision: 'Our Vision',
		visionText: 'We envision a world where everyone has access to the knowledge and tools needed to live their healthiest life. Through evidence-based content and practical guidance, we aim to make wellness accessible, achievable, and enjoyable for all.',
		values: 'Our Values',
		valuesList: [
			{
				title: 'Holistic Approach',
				description: 'We believe in addressing wellness from all angles - nutrition, movement, and rest work together for optimal health.'
			},
			{
				title: 'Science-Based',
				description: 'All our content is grounded in scientific research and evidence-based practices for reliable, trustworthy guidance.'
			},
			{
				title: 'Accessibility',
				description: 'We make healthy living accessible to everyone, regardless of background, fitness level, or experience.'
			},
			{
				title: 'Sustainability',
				description: 'We promote sustainable lifestyle changes that you can maintain long-term, not quick fixes or extreme measures.'
			}
		],
		story: 'Our Story',
		storyText: 'Emverst was born from the understanding that wellness is not about perfection, but about progress. Our team of health enthusiasts, nutritionists, and wellness experts came together to create a platform that simplifies the journey to better health. We understand the challenges of modern life and aim to provide practical, achievable solutions that fit into your daily routine.',
		team: 'Our Commitment',
		teamText: 'We are committed to continuously improving and expanding our content to serve you better. Whether you\'re just starting your wellness journey or looking to enhance your current routine, Emverst is here to support you every step of the way.',
		contact: 'Get in Touch',
		contactText: 'Have questions, suggestions, or just want to share your wellness journey with us? We\'d love to hear from you!'
	},
	id: {
		title: 'Tentang Emverst',
		subtitle: 'Partner Anda dalam Hidup Sehat',
		mission: 'Misi Kami',
		missionText: 'Di Emverst, kami percaya bahwa kesejahteraan sejati berasal dari keseimbangan tiga pilar kesehatan yang esensial: pola makan yang mindful, gerakan teratur, dan istirahat berkualitas. Misi kami adalah membimbing Anda dalam perjalanan transformatif menuju gaya hidup yang lebih sehat dan seimbang.',
		vision: 'Visi Kami',
		visionText: 'Kami membayangkan dunia di mana setiap orang memiliki akses terhadap pengetahuan dan alat yang diperlukan untuk menjalani hidup tersehat mereka. Melalui konten berbasis bukti dan panduan praktis, kami bertujuan untuk membuat kesehatan mudah diakses, dapat dicapai, dan menyenangkan bagi semua.',
		values: 'Nilai-Nilai Kami',
		valuesList: [
			{
				title: 'Pendekatan Holistik',
				description: 'Kami percaya dalam menangani kesehatan dari segala sudut - nutrisi, gerakan, dan istirahat bekerja sama untuk kesehatan optimal.'
			},
			{
				title: 'Berbasis Sains',
				description: 'Semua konten kami didasarkan pada penelitian ilmiah dan praktik berbasis bukti untuk panduan yang dapat diandalkan.'
			},
			{
				title: 'Aksesibilitas',
				description: 'Kami membuat hidup sehat dapat diakses oleh semua orang, terlepas dari latar belakang, tingkat kebugaran, atau pengalaman.'
			},
			{
				title: 'Keberlanjutan',
				description: 'Kami mempromosikan perubahan gaya hidup berkelanjutan yang dapat Anda pertahankan jangka panjang, bukan solusi cepat atau tindakan ekstrem.'
			}
		],
		story: 'Cerita Kami',
		storyText: 'Emverst lahir dari pemahaman bahwa kesehatan bukan tentang kesempurnaan, tetapi tentang kemajuan. Tim kami yang terdiri dari penggemar kesehatan, ahli gizi, dan pakar kesehatan berkumpul untuk menciptakan platform yang menyederhanakan perjalanan menuju kesehatan yang lebih baik. Kami memahami tantangan kehidupan modern dan bertujuan memberikan solusi praktis dan dapat dicapai yang sesuai dengan rutinitas harian Anda.',
		team: 'Komitmen Kami',
		teamText: 'Kami berkomitmen untuk terus memperbaiki dan memperluas konten kami untuk melayani Anda dengan lebih baik. Baik Anda baru memulai perjalanan kesehatan atau ingin meningkatkan rutinitas saat ini, Emverst hadir untuk mendukung Anda di setiap langkah.',
		contact: 'Hubungi Kami',
		contactText: 'Punya pertanyaan, saran, atau hanya ingin berbagi perjalanan kesehatan Anda dengan kami? Kami senang mendengar dari Anda!'
	}
};

const pageContent = content[currentLocale as keyof typeof content] || content.en;
---

<Layout title={pageContent.title} lang={currentLocale}>
	<div class="min-h-screen bg-gray-50">
		<!-- Header Section -->
		<section class="bg-gradient-to-r from-orange-500 to-red-600 text-white py-16">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="text-center">
					<h1 class="text-4xl md:text-5xl font-bold mb-4">
						{pageContent.title}
					</h1>
					<p class="text-xl md:text-2xl text-orange-100 max-w-3xl mx-auto">
						{pageContent.subtitle}
					</p>
				</div>
			</div>
		</section>

		<!-- Content Sections -->
		<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
			<!-- Mission -->
			<section class="mb-16">
				<div class="bg-white rounded-lg shadow-lg p-8">
					<h2 class="text-2xl font-bold text-gray-900 mb-4 flex items-center">
						<span class="text-3xl mr-3">ğŸ¯</span>
						{pageContent.mission}
					</h2>
					<p class="text-gray-700 text-lg leading-relaxed">
						{pageContent.missionText}
					</p>
				</div>
			</section>

			<!-- Vision -->
			<section class="mb-16">
				<div class="bg-white rounded-lg shadow-lg p-8">
					<h2 class="text-2xl font-bold text-gray-900 mb-4 flex items-center">
						<span class="text-3xl mr-3">ğŸ‘ï¸</span>
						{pageContent.vision}
					</h2>
					<p class="text-gray-700 text-lg leading-relaxed">
						{pageContent.visionText}
					</p>
				</div>
			</section>

			<!-- Values -->
			<section class="mb-16">
				<div class="bg-white rounded-lg shadow-lg p-8">
					<h2 class="text-2xl font-bold text-gray-900 mb-6 flex items-center">
						<span class="text-3xl mr-3">â­</span>
						{pageContent.values}
					</h2>
					<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
						{pageContent.valuesList.map((value) => (
							<div class="border-l-4 border-orange-500 pl-4">
								<h3 class="font-semibold text-gray-900 mb-2">{value.title}</h3>
								<p class="text-gray-700">{value.description}</p>
							</div>
						))}
					</div>
				</div>
			</section>

			<!-- Story -->
			<section class="mb-16">
				<div class="bg-white rounded-lg shadow-lg p-8">
					<h2 class="text-2xl font-bold text-gray-900 mb-4 flex items-center">
						<span class="text-3xl mr-3">ğŸ“–</span>
						{pageContent.story}
					</h2>
					<p class="text-gray-700 text-lg leading-relaxed">
						{pageContent.storyText}
					</p>
				</div>
			</section>

			<!-- Team Commitment -->
			<section class="mb-16">
				<div class="bg-white rounded-lg shadow-lg p-8">
					<h2 class="text-2xl font-bold text-gray-900 mb-4 flex items-center">
						<span class="text-3xl mr-3">ğŸ¤</span>
						{pageContent.team}
					</h2>
					<p class="text-gray-700 text-lg leading-relaxed">
						{pageContent.teamText}
					</p>
				</div>
			</section>

			<!-- Contact -->
			<section>
				<div class="bg-gradient-to-r from-orange-50 to-red-50 rounded-lg p-8 text-center">
					<h2 class="text-2xl font-bold text-gray-900 mb-4 flex items-center justify-center">
						<span class="text-3xl mr-3">ğŸ’Œ</span>
						{pageContent.contact}
					</h2>
					<p class="text-gray-700 text-lg mb-6">
						{pageContent.contactText}
					</p>
					<a 
						href={getRelativeLocaleUrl(currentLocale, '/')}
						class="inline-block bg-orange-600 text-white px-6 py-3 rounded-lg font-medium hover:bg-orange-700 transition-colors duration-200"
					>
						{currentLocale === 'id' ? 'Kembali ke Beranda' : 'Back to Home'}
					</a>
				</div>
			</section>
		</div>
	</div>
</Layout>