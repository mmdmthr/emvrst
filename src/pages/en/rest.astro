---
import { getRelativeLocaleUrl } from 'astro:i18n';
import Layout from '../../layouts/Layout.astro';

const currentLocale = Astro.currentLocale || 'en';

const content = {
	en: {
		title: 'Rest',
		subtitle: 'Learn Relaxation and Recovery Techniques',
		description: 'Discover the power of rest, mindfulness, and recovery for optimal well-being.',
		comingSoon: 'Coming Soon',
		placeholder: 'We are preparing wonderful content about rest, recovery, and mindfulness practices. Stay tuned!',
		features: [
			'Meditation and mindfulness guides',
			'Sleep optimization techniques',
			'Stress management strategies',
			'Recovery and restoration practices'
		]
	},
	id: {
		title: 'Istirahat',
		subtitle: 'Pelajari Teknik Relaksasi dan Pemulihan',
		description: 'Temukan kekuatan istirahat, mindfulness, dan pemulihan untuk kesejahteraan optimal.',
		comingSoon: 'Segera Hadir',
		placeholder: 'Kami sedang menyiapkan konten yang menakjubkan tentang istirahat, pemulihan, dan praktik mindfulness. Tunggu terus!',
		features: [
			'Panduan meditasi dan mindfulness',
			'Teknik optimisasi tidur',
			'Strategi manajemen stres',
			'Praktik pemulihan dan restorasi'
		]
	}
};

const pageContent = content[currentLocale as keyof typeof content] || content.en;
---

<Layout title={pageContent.title} lang={currentLocale}>
	<div class="min-h-screen bg-gray-50">
		<!-- Header Section -->
		<section class="bg-gradient-to-r from-purple-500 to-pink-600 text-white py-16">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="text-center">
					<h1 class="text-4xl md:text-5xl font-bold mb-4">
						{pageContent.title}
					</h1>
					<p class="text-xl md:text-2xl text-purple-100 mb-6 max-w-3xl mx-auto">
						{pageContent.subtitle}
					</p>
					<p class="text-lg text-purple-200 max-w-2xl mx-auto">
						{pageContent.description}
					</p>
				</div>
			</div>
		</section>

		<!-- Coming Soon Section -->
		<section class="py-20">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
				<div class="max-w-3xl mx-auto">
					<div class="text-8xl mb-8">üßò‚Äç‚ôÄÔ∏è</div>
					<h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">
						{pageContent.comingSoon}
					</h2>
					<p class="text-lg text-gray-600 mb-12">
						{pageContent.placeholder}
					</p>
					
					<!-- Features Preview -->
					<div class="bg-white rounded-lg shadow-lg p-8">
						<h3 class="text-xl font-semibold text-gray-900 mb-6">
							{currentLocale === 'id' ? 'Yang Akan Datang:' : 'What\'s Coming:'}
						</h3>
						<div class="grid grid-cols-1 md:grid-cols-2 gap-4">
							{pageContent.features.map((feature) => (
								<div class="flex items-center text-left">
									<svg class="w-5 h-5 text-purple-500 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
										<path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
									</svg>
									<span class="text-gray-700">{feature}</span>
								</div>
							))}
						</div>
					</div>
				</div>
			</div>
		</section>
	</div>
</Layout>