---
import { getCollection, type CollectionEntry } from 'astro:content';
import { getRelativeLocaleUrl } from 'astro:i18n';
import Layout from '../../../layouts/Layout.astro';

export async function getStaticPaths() {
	const recipes = await getCollection('recipes', (entry) => entry.data.lang === 'en');
	return recipes.map((recipe) => ({
		params: { slug: recipe.id },
		props: { recipe },
	}));
}

interface Props {
	recipe: CollectionEntry<'recipes'>;
}

const { recipe } = Astro.props as Props;
const { Content } = await recipe.render();
const currentLocale = 'en';

const content = {
	backToRecipes: 'Back to Recipes',
	ingredients: 'Ingredients',
	instructions: 'Instructions',
	difficulty: 'Difficulty',
	prepTime: 'Prep Time',
	cookTime: 'Cook Time',
	servings: 'Servings',
	difficultyLabels: { easy: 'Easy', medium: 'Medium', hard: 'Hard' }
};
---

<Layout title={recipe.data.title} lang={currentLocale}>
	<div class="min-h-screen bg-gray-50">
		<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
			<!-- Back Navigation -->
			<div class="mb-6">
				<a href={getRelativeLocaleUrl('en', 'eat')} class="inline-flex items-center text-emerald-600 hover:text-emerald-700 transition-colors">
					<svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
					</svg>
					{content.backToRecipes}
				</a>
			</div>

			<!-- Recipe Header -->
			<div class="bg-white rounded-2xl shadow-lg overflow-hidden mb-8">
				<div class="relative h-64 md:h-80">
					<img 
						src={recipe.data.image} 
						alt={recipe.data.title}
						class="w-full h-full object-cover"
					/>
					<div class="absolute inset-0 bg-black bg-opacity-30 flex items-end">
						<div class="p-6 text-white">
							<h1 class="text-3xl md:text-4xl font-bold mb-2">{recipe.data.title}</h1>
							<p class="text-lg opacity-90">{recipe.data.description}</p>
						</div>
					</div>
				</div>

				<!-- Recipe Info -->
				<div class="p-6">
					<div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-6">
						<div class="text-center">
							<div class="text-2xl font-bold text-emerald-600">{content.difficultyLabels[recipe.data.difficulty]}</div>
							<div class="text-sm text-gray-600">{content.difficulty}</div>
						</div>
						<div class="text-center">
							<div class="text-2xl font-bold text-emerald-600">{recipe.data.prepTime}</div>
							<div class="text-sm text-gray-600">{content.prepTime}</div>
						</div>
						<div class="text-center">
							<div class="text-2xl font-bold text-emerald-600">{recipe.data.cookTime}</div>
							<div class="text-sm text-gray-600">{content.cookTime}</div>
						</div>
						<div class="text-center">
							<div class="text-2xl font-bold text-emerald-600">{recipe.data.servings}</div>
							<div class="text-sm text-gray-600">{content.servings}</div>
						</div>
					</div>

					<!-- Tags -->
					<div class="flex flex-wrap gap-2 mb-6">
						{recipe.data.tags.map((tag) => (
							<span class="px-3 py-1 bg-emerald-100 text-emerald-800 rounded-full text-sm font-medium">
								{tag}
							</span>
						))}
					</div>
				</div>
			</div>

			<!-- Recipe Content -->
			<div class="grid md:grid-cols-3 gap-8">
				<!-- Ingredients -->
				<div class="md:col-span-1">
					<div class="bg-white rounded-2xl shadow-lg p-6 sticky top-8">
						<h2 class="text-2xl font-bold text-gray-900 mb-4">{content.ingredients}</h2>
						<ul class="space-y-3">
							{recipe.data.ingredients.map((ingredient) => (
								<li class="flex items-start">
									<svg class="w-5 h-5 text-emerald-500 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
										<path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
									</svg>
									<span class="text-gray-700">{ingredient}</span>
								</li>
							))}
						</ul>
					</div>
				</div>

				<!-- Instructions -->
				<div class="md:col-span-2">
					<div class="bg-white rounded-2xl shadow-lg p-6">
						<h2 class="text-2xl font-bold text-gray-900 mb-6">{content.instructions}</h2>
						<div class="prose prose-lg max-w-none">
							<Content />
						</div>
					</div>
				</div>
			</div>

			<!-- Back to Recipes Button -->
			<div class="mt-8 text-center">
				<a href={getRelativeLocaleUrl('en', 'eat')} class="inline-block bg-emerald-600 text-white px-8 py-3 rounded-lg text-lg font-medium hover:bg-emerald-700 transition-colors duration-200">
					{content.backToRecipes}
				</a>
			</div>
		</div>
	</div>
</Layout>